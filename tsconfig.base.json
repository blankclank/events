{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": true,
    "noLib": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "ES2019",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "tmp"]
}
